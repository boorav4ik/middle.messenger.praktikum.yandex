.card {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 340px;
  padding: 50px 30px 30px;
  background: var(--white);
  box-shadow: 0 0 6px #00000024;
  border-radius: 12px;
  transform: translate3d(-50%, -50%, 0);

  &__title {
    margin-bottom: 50px;
    font-weight: 600;
    font-size: 20px;
    line-height: 20px;
    text-align: center;
    color: var(--main-black);
  }
}
