.input {
  width: 100%;
  padding: 7px 0;
  border: none;
  outline: none;
  border-bottom: 1px solid #3369f3;
  font-weight: 500;
  font-size: 13px;
  line-height: 13px;
  color: #1e1e1e;

  &::placeholder {
    color: #999999;
  }

  &[type="search"] {
    border-radius: 5px;
    font-size: 12px;
    line-height: 12px;
    height: 32px;
    text-align: center;
    background-color: #efefef;
    border-bottom: none
  }
}
