<aside class="flex-column h-100 chats_sidebar">
  <header class="flex-column flex-sb b-divider">
    <a href="./profile.hbs" class="profile__link right">Профиль ></a>
    <input type="search" name="search" placeholder="🔍 Поиск" />
  </header>
  <div class="list vertical flex-1">
    <ul>{{{chatList}}}</ul>
  </div>
</aside>
<main class="flex-column h-100 flex-1">
  <header class="flex-row b-divider">
    <div>
      <div class="avatar circle large m-10"></div>
    </div>
    <div>
      <p>Вадим</p>
    </div>
  </header>
  <ul class="flex-column">{{{messagList}}}</ul>
  <footer>
    <form method="post" class="sendMessage">
      <label class="attach">
        <img src="../../images/attachIcon.png" class="medium" />
        <input type="file" name="attach" />
      </label>
      <input
        type="text"
        placeholder="Сообщение"
        name="message"
        class="flex-1 grey message"
      />
      <input class="circle blue medium" type="submit" value="➜" />
    </form>
  </footer>
</main>