---
title: Chokak
stylesheets:
  - ../css/textField.css
  - ../css/formWrapper.css
  - ../css/submitButton.css
  - ../css/link.css
  - ../css/main.css
fields:
  email:
    type: email
    plaseholder: почта
    required: true
  login:
    type: text
    plaseholder: логин
    required: true
  first_name:
    type: text
    plaseholder: имя
    required: false
  second_name:
    type: text
    plaseholder: фамилия
    required: false
  phone:
    type: tel
    plaseholder: телефон
    required: false
  password:
    type: password
    plaseholder: пароль
    required: true
  password-again:
    type: password
    plaseholder: пароль (ещё раз)
    required: true
---
{{!< form}}
<main>
  <div class="form__wrapper">
    <form>
      <h1>Регистрация</h1>
      <ul>
        {{#each fields}}
        <li class="text__field">
          <input type={{ this.type }} name={{ @key }} {{#if this.required}}required{{/if}} />
          <label>{{this.plaseholder}}</label>
        </li>
        {{/each}}
      </ul>
    </form>
    <div>
      {{> submitButton to="./chats.hbs" label="Авторизоваться" }}
      {{> link to="./sigin.hbs" label="Нет аккаунта?"}}
    </div>
  </div>
</main>