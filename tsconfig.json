{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
